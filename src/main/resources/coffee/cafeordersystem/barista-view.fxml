<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="coffee.cafeordersystem.BaristaUiController"
            prefWidth="400" prefHeight="600">

    <!-- Top - Simple header -->
    <top>
        <VBox style="-fx-padding: 10;">
            <Label text="Barista GUI:" style="-fx-font-size: 16;"/>
            <Label text="Welcome Barista John Doe"/>
        </VBox>
    </top>

    <!-- Center - Orders section -->
    <center>
        <VBox style="-fx-padding: 10;">
            <HBox spacing="10" style="-fx-padding: 0 0 10 0;">
                <Button fx:id="pendingOrdersButton" text="Pending Orders:" 
                        style="-fx-background-color: lightgreen; -fx-padding: 5 10;"
                        onAction="#getPendingOrders"/>
                <Button fx:id="fulfilledOrdersButton" text="Fulfilled Orders:" 
                        style="-fx-padding: 5 10;"
                        onAction="#getFufilledOrders"/>
            </HBox>

            <ScrollPane fx:id="orderScrollPane" fitToWidth="true">
                <VBox fx:id="orderContainer" spacing="10" style="-fx-padding: 5;">
                    <!-- Sample order item -->
                    <VBox style="-fx-border-color: black; -fx-border-width: 1; -fx-padding: 5;">
                        <HBox spacing="10">
                            <Label text="Order#: 3033" style="-fx-font-weight: bold;"/>
                            <Label text="Status: In Progress" 
                                   style="-fx-font-weight: bold; -fx-background-color: khaki; -fx-padding: 2 5;"/>
                        </HBox>
                        <Label text="Lorem Ipsum (Extra Cream)"/>
                        <Label text="Lorem Ipsum (Extra Cream)"/>
                        <Label text="Total Cost: $123.45" style="-fx-font-weight: bold;"/>
                    </VBox>
                                        <VBox style="-fx-border-color: black; -fx-border-width: 1; -fx-padding: 5;">
                        <HBox spacing="10">
                            <Label text="Order#: 3034" style="-fx-font-weight: bold;"/>
                            <Label text="Status: In Progress" 
                                   style="-fx-font-weight: bold; -fx-background-color: khaki; -fx-padding: 2 5;"/>
                        </HBox>
                        <Label text="Lorem Ipsum (Extra Cream)"/>
                        <Label text="Lorem Ipsum (Extra Cream)"/>
                        <Label text="Total Cost: $123.45" style="-fx-font-weight: bold;"/>
                    </VBox>
                </VBox>
            </ScrollPane>
        </VBox>
    </center>

    <!-- Bottom - Action buttons -->
    <bottom>
        <HBox spacing="10" alignment="CENTER" style="-fx-padding: 10;">
            <Button fx:id="quitButton" text="Quit" 
                    style="-fx-padding: 5 15;" 
                    onAction="#handleQuit"/>
            <Button fx:id="changeStatusButton" text="Change Status" 
                    style="-fx-padding: 5 15;"
                    onAction="#handleChangeStatus"/>
            <Button fx:id="completeOrderButton" text="Complete Order" 
                    style="-fx-padding: 5 15;"
                    onAction="#handleCompleteOrder"/>
        </HBox>
    </bottom>
</BorderPane>